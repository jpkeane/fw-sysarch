<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_reset_path) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.submit 'Request Password Reset', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>