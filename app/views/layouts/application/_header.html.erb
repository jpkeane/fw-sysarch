<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to 'Floworx SysArch', root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
            <li><%= link_to 'Edit Profile', users_edit_path(username: current_user.username) %></li>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
            <li><%= link_to 'Log out from all computers', logout_all_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Register', registration_path %></li>
          <li><%= link_to 'Log in', login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>